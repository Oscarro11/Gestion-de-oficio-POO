# Gradle build folders
/backend/build/
/backend/out/

# Gradle wrapper (keep the JAR, ignore scripts)
/backend/gradlew
/backend/gradlew.bat
!backend/gradle/wrapper/gradle-wrapper.jar

# Gradle caches (local, system-specific)
/.gradle/
/build/

# IntelliJ / Eclipse / VS Code
/backend/.idea/
/backend/*.iml
/backend/.vscode/

# Logs
/backend/*.log

# Temporary / OS files
*.tmp
*.swp
.DS_Store
Thumbs.db
*.class

